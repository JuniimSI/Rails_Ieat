<p>Restaurantes</p>
        <table>
            <thead>
                <tr>
                    <th> Nome</th>
                 
                </tr>
            </thead>

            <tbody>
                <% Restaurant.all.each do |r|%>
                    <tr>
                        <th> <%= r.name %> </th>
                        <table>
                        <tbody>
                            <% r.products.each do |p|%>
                                <tr>
                                    <%= form_tag('/orders') do %>
                                        <%= hidden_field_tag :product_id, p.id %>
                                        <th> --> <%= p.name%> </th>
                                        <th> --> <%= p.value%> </th>
                                        <th><%= submit_tag 'Pedir' %> </th>
                                    <% end %>
                                </tr>
                            <% end %>
                        </tbody>

                        </table>
                    </tr>
                <% end %>
            </tbody>
</table>